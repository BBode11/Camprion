<% layout('layouts/boilerplate') -%>

<div class="container-fluid text-center">
    <main class="w-50 m-auto">
        <form action="/login" method="POST" class="validated-form" novalidate>
            <img class="mb-4 rounded mx-auto d-block" src="https://images.unsplash.com/photo-1537225228614-56cc3556d7ed?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="Tent and a hammock" width="80%" height="50%">
            <h1 class="h3 mb-3 fw-normal">Please Login</h1>

        <div class="form-floating">
            <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
            <label for="username">Username</label>
            <div class="valid-feedback">
                    Looks good!
            </div>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="password" name="password" placeholder="password" required>
            <label for="password">Password</label>
            <div class="valid-feedback">
                    Looks good!
            </div>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
        </form>

    </main>
</div>